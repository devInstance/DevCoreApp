@implements IDisposable

@inject NavigationManager NavigationManager

<div class="sidebar-nav">
    <nav class="nav flex-column">
        <!-- Main navigation -->
        <div class="nav-item">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door me-2"></i>
                <span>Home</span>
            </NavLink>
        </div>

        <!-- Admin section -->
        <AuthorizeView Roles="Owner,Admin">
            <Authorized>
                <div class="nav-group">
                    <div class="nav-group-header @(AdminGroupCollapsed ? "collapsed" : "")" @onclick="ToggleAdminGroup">
                        <i class="bi bi-gear me-2"></i>
                        <span class="flex-grow-1">Administration</span>
                        <i class="bi bi-chevron-down"></i>
                    </div>
                    <div class="nav-group-items @(AdminGroupCollapsed ? "d-none" : "")">
                        <div class="nav-item">
                            <NavLink class="nav-link" href="admin/users">
                                <i class="bi bi-people me-2"></i>
                                <span>Users</span>
                            </NavLink>
                        </div>
                        <div class="nav-item">
                            <NavLink class="nav-link" href="admin/email-log">
                                <i class="bi bi-envelope me-2"></i>
                                <span>Email Log</span>
                            </NavLink>
                        </div>
                    </div>
                </div>
            </Authorized>
        </AuthorizeView>
    </nav>
</div>

@code {
    private string? currentUrl;
    private bool AdminGroupCollapsed { get; set; } = false;

    protected override void OnInitialized()
    {
        currentUrl = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
        NavigationManager.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        currentUrl = NavigationManager.ToBaseRelativePath(e.Location);
        StateHasChanged();
    }

    private void ToggleAdminGroup()
    {
        AdminGroupCollapsed = !AdminGroupCollapsed;
    }

    public void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
    }
}
