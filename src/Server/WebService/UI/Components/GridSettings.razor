@typeparam TItem

<div class="position-fixed top-50 end-0 translate-middle-y">
    <button class="btn btn-primary rounded-0 rounded-start" data-bs-toggle="offcanvas" data-bs-target="#offcanvasGridSettings" aria-controls="offcanvasGridSettings">
        <i class="bi bi-sliders2"></i>
    </button>
</div>
<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasGridSettings" aria-labelledby="offcanvasGridSettingsLabel">
    <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasGridSettingsLabel">Grid Settings</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <p>Columns</p>
        <ul class="list-group">
            @foreach (var col in Columns)
            {
                <li class="list-group-item @col.Class"
                    draggable="@(col.IsDragable ? "true" : "false")"
                    ondragover="event.preventDefault();"
                    @ondrop="@(() => HandleDrop(col))"
                    @ondragenter="@(() => HandleDragEnter(col))"
                    @ondragleave="@(() => HandleDragLeave(col))"
                    @ondragstart="@(() => HandleDragStart(col))">
                    <i class="bi bi-justify" style="cursor: pointer;" @onmousedown="@(() => HandleMouseDown(col))" @onmouseup="@(() => HandleMouseUp(col))"></i>
                    <input class="form-check-input me-1" type="checkbox" @bind="col.IsVisible">
                    <label class="form-check-label">@col.Label</label>
                </li>
            }
        </ul>
        <div class="row mt-3">
            <div class="col-auto text-nowrap">
                Items per page:
            </div>
            <div class="col-auto">
                <select class="form-select" aria-label="Items per page" @bind="PageSize">
                    <option value="10">10</option>
                    <option value="20">20</option>
                    <option value="50">50</option>
                    <option value="100">100</option>
                </select>
            </div>
        </div>

        <div class="mt-3 float-end">
            <button class="btn btn-primary" type="button" @onclick="DoSave" data-bs-toggle="offcanvas" data-bs-target="#offcanvasGridSettings">Save</button>
            <button class="btn btn-outline-primary" type="button" @onclick="DoReset" disabled="@(!EnableResetButton)">Reset</button>
        </div>
    </div>
</div>
