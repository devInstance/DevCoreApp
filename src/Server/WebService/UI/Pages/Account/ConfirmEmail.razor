@page "/account/confirm-email"

<PageTitle>Complete Your Account</PageTitle>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                @if (showError)
                {
                    <h1 class="h4 mb-4 text-center">Error</h1>
                    <div class="alert alert-danger" role="alert">
                        @errorMessage
                    </div>
                    <div class="text-center">
                        <a href="Account/Login" class="text-decoration-none">Go to login</a>
                    </div>
                }
                else if (emailConfirmed && !needsPassword)
                {
                    <h1 class="h4 mb-4 text-center">Email Confirmed</h1>
                    <div class="alert alert-success" role="alert">
                        Thank you for confirming your email. You can now log in.
                    </div>
                    <div class="text-center">
                        <a href="Account/Login" class="btn btn-primary">Log in</a>
                    </div>
                }
                else if (emailConfirmed && needsPassword)
                {
                    <h1 class="h4 mb-4 text-center">Set Your Password</h1>
                    <p class="text-muted mb-3">Your email has been confirmed. Please set a password for your account.</p>

                    <StatusMessage Message="@passwordErrorMessage" />

                    <EditForm Model="Input" FormName="set-password" OnValidSubmit="SetPasswordAsync" method="post">
                        <DataAnnotationsValidator />

                        <div class="form-floating mb-3">
                            <InputText type="password" @bind-Value="Input.Password" id="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label for="Input.Password">Password</label>
                            <ValidationMessage For="() => Input.Password" class="text-danger" />
                        </div>

                        <div class="form-floating mb-3">
                            <InputText type="password" @bind-Value="Input.ConfirmPassword" id="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                            <label for="Input.ConfirmPassword">Confirm Password</label>
                            <ValidationMessage For="() => Input.ConfirmPassword" class="text-danger" />
                        </div>

                        <button type="submit" class="w-100 btn btn-primary">Set Password</button>
                    </EditForm>
                }
                else if (passwordSet)
                {
                    <h1 class="h4 mb-4 text-center">Account Ready</h1>
                    <div class="alert alert-success" role="alert">
                        Your password has been set successfully. You can now log in.
                    </div>
                    <div class="text-center">
                        <a href="Account/Login" class="btn btn-primary">Log in</a>
                    </div>
                }
                else
                {
                    <h1 class="h4 mb-4 text-center">Confirming Email...</h1>
                    <div class="text-center">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
