@page "/admin/email-log/{Id}"
@attribute [Authorize(Roles = "Owner,Admin")]

<PageTitle>Email Log Detail</PageTitle>

@if (Host.InProgress)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (EmailLogEntry != null)
{
    <div class="row mb-3">
        <div class="col">
            <div class="d-flex justify-content-between align-items-center">
                <h4>Email Log Detail</h4>
                <div class="d-flex gap-2">
                    <button class="btn btn-warning" @onclick="OnResend" disabled="@Host.InProgress">
                        <i class="bi bi-arrow-repeat me-1"></i>Resend
                    </button>
                    <button class="btn btn-danger" @onclick="OnDelete" disabled="@Host.InProgress">
                        <i class="bi bi-trash me-1"></i>Delete
                    </button>
                    <a class="btn btn-outline-secondary" href="admin/email-log">
                        <i class="bi bi-arrow-left me-1"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <div class="row mb-2">
                <div class="col-md-2 fw-bold">Status</div>
                <div class="col-md-10">
                    <span class="badge @GetStatusBadgeClass()">@EmailLogEntry.Status</span>
                </div>
            </div>
            <div class="row mb-2">
                <div class="col-md-2 fw-bold">From</div>
                <div class="col-md-10">@EmailLogEntry.FromName &lt;@EmailLogEntry.FromAddress&gt;</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-2 fw-bold">To</div>
                <div class="col-md-10">@EmailLogEntry.ToName &lt;@EmailLogEntry.ToAddress&gt;</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-2 fw-bold">Subject</div>
                <div class="col-md-10">@EmailLogEntry.Subject</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-2 fw-bold">Template</div>
                <div class="col-md-10">@(EmailLogEntry.TemplateName ?? "N/A")</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-2 fw-bold">Scheduled Date</div>
                <div class="col-md-10">@EmailLogEntry.ScheduledDate.ToString("g")</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-2 fw-bold">Sent Date</div>
                <div class="col-md-10">@(EmailLogEntry.SentDate?.ToString("g") ?? "N/A")</div>
            </div>
            @if (!string.IsNullOrEmpty(EmailLogEntry.ErrorMessage))
            {
                <div class="row mb-2">
                    <div class="col-md-2 fw-bold">Error</div>
                    <div class="col-md-10 text-danger">@EmailLogEntry.ErrorMessage</div>
                </div>
            }
            <div class="row mb-2">
                <div class="col-md-2 fw-bold">Created</div>
                <div class="col-md-10">@EmailLogEntry.CreateDate.ToString("g")</div>
            </div>
            <div class="row mb-2">
                <div class="col-md-2 fw-bold">Updated</div>
                <div class="col-md-10">@EmailLogEntry.UpdateDate.ToString("g")</div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <strong>Email Body</strong>
            @if (EmailLogEntry.IsHtml)
            {
                <span class="badge bg-info ms-2">HTML</span>
            }
            else
            {
                <span class="badge bg-secondary ms-2">Plain Text</span>
            }
        </div>
        <div class="card-body">
            @if (EmailLogEntry.IsHtml)
            {
                <iframe srcdoc="@EmailLogEntry.Content" style="width: 100%; min-height: 400px; border: none;"></iframe>
            }
            else
            {
                <pre style="white-space: pre-wrap;">@EmailLogEntry.Content</pre>
            }
        </div>
    </div>
}
