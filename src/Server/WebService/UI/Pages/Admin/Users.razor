@page "/admin/users"
@attribute [Authorize(Roles = "Owner,Admin")]

<PageTitle>Users</PageTitle>

<div class="row mb-3">
    <div class="col col-md-6 col-lg-4 d-flex">
        <input class="form-control" placeholder="Search users..." @bind="SearchTerm" @bind:event="oninput" disabled="@Host.InProgress" />
        <button class="btn btn-primary ms-2" @onclick="OnSearch" disabled="@Host.InProgress">
            <i class="bi bi-search"></i>
        </button>
    </div>
    <div class="col col-md-6 col-lg-8">
        <div class="float-end">
            <a class="btn btn-primary ms-2" role="button" href="admin/users/new" disabled="@Host.InProgress">
                <i class="bi bi-person-plus-fill me-1"></i>New User
            </a>
        </div>
    </div>
</div>

@if (Host.InProgress)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (UserList != null)
{
    @if (!string.IsNullOrEmpty(UserList.Search))
    {
        <div class="alert alert-light">
            Searching for <strong>@SearchTerm</strong>
            <button type="button" class="btn-close ms-2" @onclick="OnClearSearch">
            </button>
        </div>
    }

    @if (!UserList.Items.Any())
    {
        <p>No users found.</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    @foreach (var col in Columns.Where(c => c.IsVisible))
                    {
                        @if (col.IsSortable)
                        {
                        <th scope="col">
                            <HSortableHeader Model="UserList" Label="@col.Label" SortField="@col.Field" OnSort="OnSortAsync"></HSortableHeader>
                        </th>
                        }
                        else
                        {
                        <th scope="col">
                            @col.Label
                        </th>
                        }
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var row in UserList.Items)
                {
                    <tr>
                        @foreach (var col in Columns.Where(c => c.IsVisible))
                        {
                            <td>
                                @if (col.Template is not null)
                                {
                                    @col.Template(col.ValueSelector(row))
                                }
                                else
                                {
                                    @col.ValueSelector(row)
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        <ModelDataPager List="UserList" OnPageChanged="OnPageChangedAsync" />
    }
}

<GridSettings Columns="Columns" OnSave="OnSave" TItem="DevInstance.DevCoreApp.Shared.Model.UserProfileItem" />
