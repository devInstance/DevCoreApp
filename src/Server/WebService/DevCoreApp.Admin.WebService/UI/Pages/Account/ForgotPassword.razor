@page "/account/forgot-password"

<PageTitle>Forgot Password</PageTitle>

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm">
            <div class="card-body p-4">
                <h1 class="h4 mb-4 text-center">Forgot Password</h1>

                @if (submitted)
                {
                    <div class="alert alert-success" role="alert">
                        If an account with that email exists, we've sent a password reset link. Please check your email.
                    </div>
                    <div class="text-center">
                        <a href="Account/Login" class="text-decoration-none">Return to login</a>
                    </div>
                }
                else
                {
                    <p class="text-muted mb-3">Enter your email address and we'll send you a link to reset your password.</p>

                    <EditForm Model="Input" FormName="forgot-password" OnValidSubmit="OnValidSubmitAsync" method="post">
                        <DataAnnotationsValidator />

                        <div class="form-floating mb-3">
                            <InputText @bind-Value="Input.Email" id="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label for="Input.Email">Email</label>
                            <ValidationMessage For="() => Input.Email" class="text-danger" />
                        </div>

                        <button type="submit" class="w-100 btn btn-primary mb-3">Send Reset Link</button>

                        <div class="text-center">
                            <a href="Account/Login" class="text-decoration-none">Back to login</a>
                        </div>
                    </EditForm>
                }
            </div>
        </div>
    </div>
</div>
