@page "/admin/users"
@attribute [Authorize(Roles = "Owner,Admin")]

<PageTitle>Users</PageTitle>

<div class="row mb-3">
    <div class="col col-md-6 col-lg-4 d-flex">
        <input class="form-control" placeholder="Search users..." @bind="SearchTerm" @bind:event="oninput" disabled="@Host.InProgress" />
        <button class="btn btn-primary ms-2" @onclick="OnSearch" disabled="@Host.InProgress">
            <i class="bi bi-search"></i>
        </button>
    </div>
    <div class="col col-md-6 col-lg-8">
        <div class="float-end">
            <a class="btn btn-primary ms-2" role="button" href="admin/users/new" disabled="@Host.InProgress">
                <i class="bi bi-person-plus-fill me-1"></i>New User
            </a>
        </div>
    </div>
</div>

@if (Host.InProgress)
{
    <div class="text-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (UserList != null)
{
    @if (!string.IsNullOrEmpty(UserList.Search))
    {
        <div class="alert alert-light">
            Searching for <strong>@SearchTerm</strong>
            <button type="button" class="btn-close ms-2" @onclick="OnClearSearch">
            </button>
        </div>
    }

    @if (!UserList.Items.Any())
    {
        <p>No users found.</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    @foreach (var col in Columns.Where(c => c.IsVisible))
                    {
                        @if (col.IsSortable)
                        {
                        <th scope="col">
                            <HSortableHeader Model="UserList" Label="@col.Label" SortField="@col.Field" OnSort="OnSortAsync"></HSortableHeader>
                        </th>
                        }
                        else
                        {
                        <th scope="col">
                            @col.Label
                        </th>
                        }
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var row in UserList.Items)
                {
                    <tr>
                        @foreach (var col in Columns.Where(c => c.IsVisible))
                        {
                            <td>
                                @if (col.Field == "actions")
                                {
                                    <a href="admin/users/@row.Id/edit" class="btn btn-sm btn-outline-primary me-1" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button class="btn btn-sm btn-outline-danger" title="Delete" @onclick="() => ShowDeleteConfirmation(row)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                }
                                else if (col.Template is not null)
                                {
                                    @col.Template(col.ValueSelector(row))
                                }
                                else
                                {
                                    @col.ValueSelector(row)
                                }
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        <ModelDataPager List="UserList" OnPageChanged="OnPageChangedAsync" />
    }
}

<GridSettings Columns="Columns" OnSave="OnSave" PageSize="pageCount" TItem="DevInstance.DevCoreApp.Shared.Model.UserProfileItem" />

@if (UserToDelete != null)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Delete</h5>
                    <button type="button" class="btn-close" @onclick="CancelDelete"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete user <strong>@UserToDeleteName</strong>?</p>
                    <p class="text-danger">This action cannot be undone.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CancelDelete">Cancel</button>
                    <button type="button" class="btn btn-danger" @onclick="ConfirmDelete" disabled="@Host.InProgress">
                        @if (Host.InProgress)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                        }
                        Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
}
